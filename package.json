{
  "name": "audit_checklists-app",
  "version": "1.5.0",
  "description": "A comprehensive web and mobile application for conducting restaurant audits and checklists. This application helps restaurant managers and auditors track compliance, safety, and quality standards.",
  "main": "./mobile/App.js",
  "directories": {
    "doc": "docs",
    "test": "tests"
  },
  "scripts": {
    "hooks:install": "git config core.hooksPath .githooks",
    "hooks:verify": "git config --get core.hooksPath",
    "hooks:doctor": "node scripts/hooks-doctor.js",
    "check:expo-config-parity": "node scripts/check-expo-config-parity.js",
    "check:release-type": "node scripts/check-release-type.js",
    "release:preflight": "npm run check:expo-config-parity",
    "release:local-guard": "npm run check:expo-config-parity && npm run check:release-type --",
    "test": "node scripts/run-all-tests.js",
    "test:backend": "cd backend && npm test",
    "test:api": "cd backend && npm run test:api",
    "test:full-checklists": "cd backend && npm run test:full-checklists",
    "test:web": "cd web && npm test -- --watchAll=false",
    "test:mobile": "cd mobile && npm test",
    "test:all": "node scripts/run-all-tests.js --all",
    "test:setup": "cd backend && npm run test:setup",
    "test:quick": "node scripts/run-all-tests.js --quick",
    "build:apk:preview": "cd mobile && npx eas build --platform android --profile preview --local --output app-preview.apk",
    "build:apk:release": "cd mobile && npx eas build --platform android --profile release --local --output app-release.apk"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "devDependencies": {
    "@types/node": "^25.1.0",
    "@types/react": "^19.2.10",
    "@types/react-dom": "^19.2.3",
    "axios": "^1.13.2",
    "ts-jest": "^29.4.6",
    "typescript": "^5.9.3",
    "vitest": "^4.0.18"
  },
  "dependencies": {
    "expo": "^54.0.32",
    "expo-updates": "~29.0.16",
    "hermes-engine": "^0.11.0"
  }
}
