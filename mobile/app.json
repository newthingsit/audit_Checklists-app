{
  "expo": {
    "name": "Restaurant Audit",
    "slug": "restaurant-audit",
    "version": "1.0.0",
    "sdkVersion": "54.0.0",
    "orientation": "portrait",
    "userInterfaceStyle": "light",
    "splash": {
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.restaurantaudit.app",
      "infoPlist": {
        "NSCameraUsageDescription": "This app uses the camera to take photos for audit items",
        "NSPhotoLibraryUsageDescription": "This app needs access to your photo library to upload images for audit items.",
        "NSPhotoLibraryAddUsageDescription": "This app needs permission to save photos to your library."
      }
    },
    "android": {
      "adaptiveIcon": {
        "backgroundColor": "#ffffff"
      },
      "package": "com.restaurantaudit.app",
      "permissions": [
        "CAMERA",
        "READ_EXTERNAL_STORAGE",
        "WRITE_EXTERNAL_STORAGE"
      ]
    },
    "plugins": [
      "expo-secure-store"
    ],
    "extra": {
      "apiUrl": {
        "development": "http://192.168.1.156:5000/api",
        "production": "https://your-production-api.com/api"
      }
    }
  }
}
