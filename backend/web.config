<?xml version="1.0" encoding="utf-8"?>
<!--
  Azure App Service web.config
  This file ensures CORS headers are properly handled even if Azure App Service
  tries to interfere with CORS configuration.
-->
<configuration>
  <system.webServer>
    <!-- Disable Azure App Service CORS module to let Node.js handle CORS -->
    <httpProtocol>
      <customHeaders>
        <!-- Remove any default CORS headers Azure might add -->
        <remove name="Access-Control-Allow-Origin" />
        <remove name="Access-Control-Allow-Methods" />
        <remove name="Access-Control-Allow-Headers" />
      </customHeaders>
    </httpProtocol>
    
    <!-- Ensure OPTIONS requests are passed to Node.js -->
    <handlers>
      <add name="iisnode" path="server.js" verb="*" modules="iisnode"/>
    </handlers>
    
    <!-- Rewrite rules to ensure all requests reach Node.js -->
    <rewrite>
      <rules>
        <!-- Don't rewrite if file exists (for static files) -->
        <rule name="StaticContent" stopProcessing="true">
          <match url="^(uploads|public)/.*" />
          <action type="None" />
        </rule>
        
        <!-- All other requests go to Node.js -->
        <rule name="NodeInspector" patternSyntax="ECMAScript" stopProcessing="true">
          <match url="^server.js\/debug[\/]?" />
        </rule>
        
        <rule name="StaticContent">
          <action type="Rewrite" url="public{REQUEST_URI}"/>
        </rule>
        
        <rule name="DynamicContent">
          <conditions>
            <add input="{REQUEST_FILENAME}" matchType="IsFile" negate="True"/>
          </conditions>
          <action type="Rewrite" url="server.js"/>
        </rule>
      </rules>
    </rewrite>
    
    <!-- Security settings -->
    <security>
      <requestFiltering>
        <requestLimits maxAllowedContentLength="52428800" /> <!-- 50MB -->
      </requestFiltering>
    </security>
  </system.webServer>
</configuration>
